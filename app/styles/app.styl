@import 'nib'

roboto-condensed = 'Roboto Condensed', sans-serif
roboto = 'Roboto', sans-serif

::-webkit-scrollbar {
    width: 12px;
}
 
::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 

}
 
::-webkit-scrollbar-thumb {
    -webkit-box-shadow: inset 0 0 6px #D3F3FF;
    background-color #C3CFE4
    opacity .5
}

border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

body
  background-color rgba(237, 246, 255, 0.11)
  padding-top 20px
  padding-bottom 20px

  @media (min-height: 750px)
    height 700px

.row
  max-width 100em

.left-panel
  text-align: center;
  padding-left: 0;
  position: fixed;
  user-select none
  width: 20%;
  max-width: 270px;

.right-panel
  text-align right
  padding-left 0em
  user-select none
  position fixed
  width 13%
  max-width: 221px

.search
  width: 90%;
  height: 40px;
  font-family: 'Open Sans',sans-serif;
  padding: 5px;
  font-weight: 500;
  border-radius: 3px;
  margin-bottom: 13px;
  opacity: 0.4;
  

.node-functions
  position absolute
  left 102%
  width 30%
  z-index 100


.animate-enter,
.animate-leave
  transition all 1.4s linear
  
.animate-enter.animate-enter-active,
.animate-leave 
  color red
  opactiy 1


.animate-leave.animate-leave-exit,
.animate-enter
  opactiy 0


.note-node
  &:hover
    cursor text

h1, h2, h3, h4
  font-family roboto

#titleWordsFixed
  bottom: 1%;
  right: -91%;
  position: fixed;

#titleWords
  text-align: right;

.authForms
  margin-top: 40%;
  text-align center

// .authToggle
  
.has-tip
  border none
  &:hover
    border none
    color black
    opacity 1



.level1
  font-family: 'Roboto Condensed',sans-serif;
  font-size: 1.7em;
  line-height: 1.2em;

.level2
  font-family: 'Open Sans',sans-serif;
  padding-left: 1em;
  font-size: 1.4em;
  font-weight: 300;

.level3
  font-family: 'PT Serif',serif;
  padding-left: 2em;
  font-size: 1.19em;
  line-height: 1.45em;
  font-weight: 300;


.level4
  font-family: 'PT Serif', serif;
  padding-left: 4em;
  font-size: 1em;
  font-style: italic;

.top-center-bar
  padding: 17px 55px;
  user-select none


.levelMeter
  height: .71em;
  opacity: .7;
  border-radius: 12px;
  width: 150px;
  box-shadow: inset 1px 0 6px -2px #000;
  position absolute
  margin-top: 5px;
  margin-left: 15px;

.levelDot
  width: 8%;
  height: 100%;
  margin-left: 50%;
  border-radius: 10px;
  box-shadow: inset -2px -2px 11px -2px black;
  
.icon.ion-arrow-left-b,
.icon.ion-arrow-right-b
  font-size 1.3em

.level-arrow-buttons
  opacity: .2;
  height: 30px;
  width: 30px;
  cursor: pointer;
  &:hover
    opacity .9
  &:mousedown
    opactiy 1


.node-surface
  box-shadow: -1px 2px 15px -5px #b0dfee;
  padding: 1.8em;
  background-color: rgba(255,255,255,0.26);
  color: #3a3453;
  margin-top: -2em;
  margin-right: auto;
  padding-top: 6em;
  margin-left: auto;
  position: relative;
  max-width: 768px;

.note-node
  margin-bottom .15em
  &:focus
    outline: none;

.archivedText
  padding 0.4em

#archiveIcon
  border-left: solid 1px #2f4f4f;
  padding: 0 1em 0 1.1em;
  margin-left: 1em;


.note-in-list
  font-family: 'Roboto Condensed',sans-serif;
  box-shadow: 1px 1px 8px -4px #81B8FC;
  cursor pointer
  min-height 3em
  &:hover
    transition: all 0.1s linear;
    box-shadow: 3px 0 3px -1px #002f69;


.current-note-in-list
  box-shadow: -5px 0 3px -1px #2900FF;;
  cursor pointer
  &:hover
    transition: all 0.1s linear;
    box-shadow: -5px 0 3px -1px #2900FF;;


.title-stamp
  font-size: .97em;
  color: #575664;
  line-height: 1.4em;
  font-family: 'Roboto Condensed',sans-serif;
  letter-spacing: .01rem;
  font-weight: 200;


.note-in-list-info
  padding 0.4em
  padding-left: .5em;
  width 72%

.updated-stamp
  text-align: left;
  font-family: 'Open Sans', sans-serif
  // font-style: italic;
  font-size: .8em;
  opacity: .8;
  padding-left: .1rem;


.note-in-list-buttons
  width: 28%;
  margin-top: -3.07rem;
  text-align: center;
  height: 3.1rem;



.pin-archive-buttons
  height: 100%;
  width: 50%;
  opacity: .3;
  padding-top: .8rem;

.pinnedNote
  color: blue;
  opacity: .7;

.pin-button
  font-size: 1.9em;
  font-weight: 900;
  transition: all 0.25s ease;
  &:hover
    opacity .7
    color blue

.archive-button
  @extend .pin-archive-buttons
  font-size: 1.6rem;
  transition: all 0.25s ease;
  &:hover
    opacity 1
    color red


.scroller 
  text-align left
  white-space: normal;
  height: 35em;
  width: 104%;
  padding-left: 2%;
  padding-right: 6%;
  overflow-y: hidden;
  position: relative; 

  @media (max-height: 900px)
    height 725px
  @media (max-height: 850px)
    height 675px
  @media (max-height: 750px)
    height 575px
  @media (max-height: 650px)
    height 475px
  @media (max-height: 550px)
    height 375px
  @media (max-height: 450px)
    height 275px
  @media (max-height: 350px)
    height 175px
  @media (max-height: 800px)
    height 625px
  @media (max-height: 700px)
    height 525px
  @media (max-height: 600px)
    height 425px
  @media (max-height: 500px)
    height 325px
  @media (max-height: 525px)
    height 350px
  @media (max-height: 575px)
    height 400px  
  @media (max-height: 475px)
    height 300px
  @media (max-height: 400px)
    height 225px

.ps-container .ps-scrollbar-y
  width 6px

.side-tools 
  height 3em
  margin 0.1em 0em 1em 0.8em;
  border-bottom-style solid
  border-top-style solid
  border-width 1px
  border-color rgb(226, 229, 255)
  width: 90%;

#new-note-button 
  width 50%
  text-align center
  height 100%
  // border-radius 8px
  box-shadow: -2px 1px 2px -2px #000068;
  cursor: pointer;
  &:hover
    transition: all 0.15s linear;
    box-shadow: -1px 1px 4px -1px #2f4f4f;
    border: solid 1px #E6E4FF;


#new-note-text 
  height 1.3rem
  top 28.33%
  font-size 1.3rem
  font-family roboto
  position: relative
  font-weight 500

#note-change-box
  width 50%
  height 100%
  margin-top -2.88rem

.note-change
  width: 50%;
  height: 100%;
  text-align: center;
  cursor: pointer;
  // border-radius: 14px;
  box-shadow: -2px 1px 2px -2px #000068;
  &:hover
    transition: all 0.15s linear;
    box-shadow: -1px 1px 4px -1px #2f4f4f;
    border: solid 1px #E6E4FF;

.down-button
  margin-top -2.876rem

.arrow
  font-size 1rem
  height @font-size
  margin-top ((3rem - @font-size) / 2)

#user-email
  text-align: center;
  margin-bottom: 1em;
  font-family: Arial;
  color: darkslategray;

#sign-out-button 
  font-size: 1em;
  font-family: 'Oswald', sans-serif;
  opacity .4
  width 100px
  &:hover
      opacity 1

#feedback-button 
  font-size: 1em;
  font-family: 'Oswald', sans-serif;
  opacity .7
  width 100px
  &:hover
      opacity 1

#feedback-textarea
  resize none
  height 100%
  margin-left: 9px;
  width: 95%;
